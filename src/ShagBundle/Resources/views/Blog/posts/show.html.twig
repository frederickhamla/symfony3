<h1>Post</h1>

<table>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Descriptionlong</th>
            <td>{{ post.descriptionLong }}</td>
        </tr>
        <tr>
            <th>Descriptionshort</th>
            <td>{{ post.descriptionShort }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Updatedat</th>
            <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Deleteat</th>
            <td>{% if post.deleteAt %}{{ post.deleteAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Isactive</th>
            <td>{% if post.isActive %}Yes{% else %}No{% endif %}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('posts_index') }}">Back to the list</a>
    </li>
    <li>
        <a href="{{ path('posts_edit', { 'id': post.id }) }}">Edit</a>
    </li>
    <li>
        {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </li>
</ul>
