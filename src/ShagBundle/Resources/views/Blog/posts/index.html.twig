{% extends 'ShagBundle:Blog:base.html.twig' %}

{% block header %}
<div>
    {% if is_granted('ROLE_USER')  %}
        <p>Bienvenue {{ app.user.username }}</p>
        <a href="{{ path('logout') }}">Se déconnecter</a>
    {% else %}
        <div>
            <a href="{{ path('registration') }}">Se créer un compte</a>
        </div>
        <div>
            <a href="{{ path('login') }}">Se connecter</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Posts list</h1>

        <div>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Descriptionlong</th>
                    <th>Descriptionshort</th>
                    <th>Createdat</th>
                    <th>Updatedat</th>
                    <th>Deleteat</th>
                    <th>Isactive</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td><a href="{{ path('posts_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.descriptionLong }}</td>
                        <td>{{ post.descriptionShort }}</td>
                        <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if post.deleteAt %}{{ post.deleteAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if post.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('posts_show', { 'id': post.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('posts_edit', { 'id': post.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <ul>
            <li>
                <a href="{{ path('posts_new') }}">Create a new post</a>
            </li>
        </ul>
    {% else %}
        <div>
            <h1>Les derniers posts</h1>

            {% for post in posts %}
                {% if post.isActive == true %}
                    <h2>{{ post.title }}</h2>
                    <h3>Ecrit par {{ post.users.username }}</h3>
                    <p>{{ post.descriptionShort }}</p>
                    <p>Créé le {{ post.createdAt|date('d M Y') }}</p>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
